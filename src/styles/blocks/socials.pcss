.socials{
   display: flex;
}

.socials__item {
   margin-right: 40px;

   &:last-child {
      margin-right: 0;
   }
}

.social__item--footer {
   position: relative;
   height: 27px;

   &::before {
   content: "";
   position: absolute;
   width: 50px;
   height: 50px;
   top: -50%;
   left: -55%;
   border: 1px solid #ffffff;
   border-radius: 50%;
   background: transparent;
   }
}

.socials__icon {
   width: 25px;
   height: 25px;
   fill: #ffffff;
   opacity: .4;
}