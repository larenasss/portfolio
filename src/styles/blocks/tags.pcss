.tags {
   display: flex;
}

.tags__item {
   display: flex;
   align-items: center;
   justify-content: center;
   padding: 18px 20px;
   background-color: #f3f5f9;
   margin-right: 10px;
   border-radius: 30px;
   font-size: 15px;
   font-weight: 600;
   opacity: 0.7;

   &:last-child {
      margin-right: 0;
   }
}
