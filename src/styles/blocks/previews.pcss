.previews {
   display: flex;
   position: absolute;
   right: 0;
   bottom: 55px;

   @include desktop {
      bottom: 25px;
      width: 95%;
   }

   @include tablets {
      bottom: 25px;
      right: 0;
      width: 80%;
   }

   @include phones {
      display: none;
   }
}

.previews__item {
   margin: -4px;
   border: 3px solid transparent;

   &.active,
   &:hover {
     border: 3px solid #f29400;
     z-index: 2;
   }
}

.previews__item-pic {
   height: 100px;
}