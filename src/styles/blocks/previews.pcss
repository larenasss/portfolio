.previews {
   display: flex;
   position: absolute;
   right: 0;
   bottom: 55px;
   width: 80%;

   @include desktop {
      bottom: 25px;
   }

   @include phones {
      display: none;
   }
}

.previews__item {
   margin: -3px;
   border: 3px solid transparent;

   &.active,
   &:hover {
     border: 3px solid #f29400;
     z-index: 2;
   }
}

.previews__item-pic {
   width: 100%;
   height: 100px;
}