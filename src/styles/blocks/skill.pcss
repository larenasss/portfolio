.skill {
   position: relative;
}

.skill__shape {
   width: 200px;
   height: 200px;
   display: inline-block;
}

.skill__circle {
   fill: transparent;
   stroke-width: 2px;
   stroke: #ccc;
}

.skill__title {
   position: absolute;
   top: 50%;
   left: 50%;
   transform: translate(-50%, -50%);
   font-size: 18px;
   font-weight: 700;
   opacity: 0.5;
}

.skills-row__item {
   display: flex;
   align-items: center;
}

.skills-row__title {
   font-size: 24px;
   font-weight: 700;
}
