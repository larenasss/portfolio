.summary {
   height: 50vh;

   @include desktop {
      height: 120vh;
      background: url('../images/content/summary-bg.png') center center / cover no-repeat;
   }
}

.summary__container {
   display: flex;
   flex-direction: inherit;
   justify-content: center;
   width: 70%;

   @include desktop {
      align-items: center;
   }

   @include phones {
      width: 90%;
      flex-direction: column;
   }
}

.summary__left {
   width: 30%;
   margin-right: 100px;

   @include phones {
      margin-right: 0;
      width: 100%;
   }
}

.summary__right {
   width: 50%;

   @include phones {
      width: 100%;
   }
}

.summary__subtitle {
   opacity: 0.5;
   font-weight: 400;
   margin-bottom: 20px;
}

.summary__title {
   font-size: 36px;
   font-weight: 700;
   margin-bottom: 30px;
}

.summary__text {
   margin-bottom: 100px;

   @include phones {
      margin-bottom: 30px;
    }
}

.summary__ps {
   font-style: italic;
   line-height: 30px;
}