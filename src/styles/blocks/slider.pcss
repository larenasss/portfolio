.slider {
   width: 100%;
   height: 549px;
   position: relative;
   
   &::before {
      content: "2";
      position: absolute;
      top: -45px;
      right: -160px;
      font-size: 400px;
      font-weight: 800;
      color: #e6e6e6;

      @include phones {
         display: none;
      }
   }

   @include desktop {
      width: 635px;
      height: 353px;
   }

   @include tablets {
      width: 720px;
      height: 400px;
   }

   @include phones {
      width: 100%;
      height: 220px;
   }
}

.slider__fullpic {
   position: absolute;
   top: 0;
   right: 0;
   width: 100%;
   height: 100%; 
}

.slider-buttons {
   position: absolute;
   background-color: #353e4e;
   bottom: 55px;
   right: -50px;
   height: 100px;
   width: 50px;
   display: flex;
   flex-direction: column;
   justify-content: space-around;

   @include desktop {
      bottom: 30px;
   }

   @include phones {
      right: 0;
      bottom: 0;
   }
}

.slider-buttons__item {
   position: relative;
   display: flex;
   align-items: center;
   justify-content: center;
   height: 50%;
   background-color: #353e4e;

   &:hover {
      background-color: #4b6fd7;
      transition: .8s;
      
      &::after {
         border-left-color: #4b6fd7;
         transition: .8s;
      }  
   }

   &::before {
      content: "";
      position: absolute;
      border: 5px solid transparent;
      width: 0px;
      height: 0px;
      border-left-color: #fff;
      border-right-width: 0;
   }

   &::after {
      content: "";
      position: absolute;
      border: 5px solid transparent;
      width: 0px;
      height: 0px;
      border-left-color: #353e4e;
      right: 24px;
      border-right-width: 0;
   }
}

.slider-buttons__item--slide--prev {
   transform: rotate(180deg);
}