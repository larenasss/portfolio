script(type="text/x-template")#slider-container
   .works__content
      display(
         :works="works"
         :current-work="currentWork"
         @slide="handleSlide"
      )
      info(
         :current-work="currentWork"
      )



script(type="text/x-template")#slider-display
   .works__left
      .slider
         img(:src="currentWork.photo").slider__fullpic
      .slider__preview
         thumbs(
            :works="works"
            :currentWork="currentWork"
         )
         btns(
            @slide="$emit('slide', $event)"
         )
            

script(type="text/x-template")#slider-thumbs
   ul.previews
      li.previews__item(v-for="work in reversedWorks" :key="work.id" :class="{active: work.id === currentWork.id}")
         a.previews__item-link
            img(:src="work.photo" alt="").previews__item-pic

script(type="text/x-template")#slider-btns
   .slider-buttons
      button(@click.prevent="$emit('slide', 'prev')").slider-buttons__item.slider-buttons__item--slide--prev
      button(@click.prevent="$emit('slide', 'next')").slider-buttons__item.slider-buttons__item--slide--next
      
script(type="text/x-template")#slider-info      
   .works__right
      tags(
         :tags="tagsArray"
      )
      h3.works__text-title {{ currentWork.title }}
      .text.works__desc-text
         p {{ currentWork.desc }}
      a.works__text-link(:href="currentWork.link") Посмотреть сайт
         +icon('link', 'works__text__icon')

script(type="text/x-template")#slider-tags
   .works__tags
      ul.tags
        li.tags__item(v-for="tag in tags" :key="tag")
         .tag {{ tag }}